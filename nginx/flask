server {
    listen 443 ssl http2 ;
    listen 80 ;
    server_name www.flask.do.playtube.cloud flask.do.playtube.cloud; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/flask.do.playtube.cloud/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/flask.do.playtube.cloud/privkey.pem; # managed by Certbot

    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

    include /etc/nginx/proxy_params;

    root /var/www/html/flask;

    # Redirect HTTP to HTTPS
    if ( $scheme != "https" ) {
        return 301 https://$host$request_uri;
    }

    location / {

            proxy_pass http://flask:8000;

    }


}